generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @unique
  email     String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
}

model book {
  id          String       @unique @default(uuid())
  name        String
  description String
  image       String
  category    bookCategory
  createdAt   DateTime     @default(now())
}

enum bookCategory {
  Fiction
  NonFiction
  manga
}
